<!-- index  -->
<div class= "background" >
  <div class="navbar">
    <h6>Mister Cocktail</h6>
  </div>
  <div class ="container-fluid cocktails-container mt-3" >
    <div class="row mt-3 mb-5">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4">
          <div class="card-category" style="background-image: linear-gradient(rgb(0,0,0,0.3), rgb(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to "Add a new Cocktail", new_cocktail_path, class:"my_btn"%>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
</div>
