
<!-- show -->

<div class="navbar">
    <h1><%= @cocktail.name %></h1>
</div>

<div class= "background" >
  <div class= "container">
  <h1>Ingredients</h1>
  <% @cocktail.doses.each do |dose| %>
    <li class="list-dose">
      <p><%= dose.description %></p>
      <p><%= dose.ingredient.name %></p>
    </li>
    <%= link_to "Delete a dose", dose_path(dose),  method: :delete, data: {confirm: "Are you sure?"}%>
  <% end %>
  </div>
</div>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "See all cocktails", cocktails_path %>

